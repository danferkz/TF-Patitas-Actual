@model RegistroViewModel

@{
    ViewData["Title"] = "Registro de empleado";
    Layout = "~/Views/Shared/_Layout.cshtml";
}


<div class="container d-flex justify-content-center">
    <div>
        <h3 class="text-center">Registro de empleado</h3>
        <p class="mb-3 text-sm mx-auto text-center custom-text">
            ¿Ya estás registrado?
            <a href="Acceso" class="custom-link">
                <strong class="custom-text-bold">Ingresa</strong>
            </a>
        <form asp-controller="Cuenta" asp-action="Registro" method="post">
            <div class="text-danger" asp-validation-summary="All"></div>

            <div class="row mt-4">
                <div>

                    <div class="mb-3">
                        <label asp-for="Nombre" class="form-label"></label>
                        <input asp-for="Nombre" class="form-control" placeholder="Ingresa tu nombre" />
                        <span asp-validation-for="Nombre" class="text-danger"></span>
                    </div>

                    <div class="mb-3">
                        <label asp-for="Email" class="form-label"></label>
                        <input asp-for="Email" class="form-control" placeholder="Ingresa tu email" />
                        <span asp-validation-for="Email" class="text-danger"></span>
                    </div>
        

                    <div class="mb-3">
                        <label asp-for="Telefono" class="form-label"></label>
                        <input asp-for="Telefono" class="form-control" placeholder="Ingresa tu teléfono" />
                        <span asp-validation-for="Telefono" class="text-danger"></span>
                    </div>

                    <div class="mb-3">
                        <label asp-for="Direccion" class="form-label"></label>
                        <input asp-for="Direccion" class="form-control" placeholder="Ingresa tu dirección" />
                        <span asp-validation-for="Direccion" class="text-danger"></span>
                    </div>
                    <div class="mb-3">
                        <label asp-for="Turno" class="form-label"></label>
                        <select asp-for="Turno" class="form-control" placeholder="Ingresa tu turno" />
                            <option>Mañana</option>
                            <option>Tarde</option>
                            <option>Noche</option>
                        <span asp-validation-for="Turno" class="text-danger"></span>
                        </select>
                    </div>
                 
                    <div class="mb-3">
                        <label asp-for="Tipo" class="form-label"></label>
                        <select asp-for="Tipo" class="form-control" placeholder="Ingresa tu tipo" />
                            <option>Veterinario</option>
                            <option>Atención al Cliente</option>

                        <span asp-validation-for="Tipo" class="text-danger"></span>
                            </select>
                    </div>

                    <div class="mb-3">
                        <label asp-for="Password" class="form-label"></label>
                        <input asp-for="Password" class="form-control" placeholder="Ingresa la contraseña" />
                        <span asp-validation-for="Password" class="text-danger"></span>
                    </div>

                    <div class="mb-3">
                        <label asp-for="ConfirmPassword" class="form-label"></label>
                        <input asp-for="ConfirmPassword" class="form-control" placeholder="Ingresa la confirmación de contraseña" />
                        <span asp-validation-for="ConfirmPassword" class="text-danger"></span>
                    </div>

                </div>

            </div>

            <div class="row">
                <div class="col-sm-10 offset-2">
                    <button type="submit" class="btn  w-75 btn-lg" id="enviar">Registrarse</button>
                </div>
            </div>

        </form>
    </div>
</div>

