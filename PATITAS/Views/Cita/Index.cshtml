@model Cita
@{
    ViewData["Title"] = "Lista de Citas";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<div class="row">
    <div class="col-4">
        <h3 class="text-dark">Lista de Citas</h3>
    </div>
    <div class="col-3">
        <a asp-action="Crear" class="btn form-control" id="enviar">Crear Cita</a>
    </div>
</div>

<div>

    <table class="table  border">
        <tr class="text-white tabla-header">
            <th>Razón</th>
            <th>Nombre Mascota</th>
            <th>Fecha</th>     
            <th>Costo</th>
            <th></th>
        </tr>

        @foreach (Cita Citas in ViewBag.Cita)
        {
            <tr class="tabla1">
                <td>@Citas.NombreCita</td>
                <td>@Citas.Mascota.NombreMascota</td>
                <td>@Citas.Fecha</td>
                <td>@Citas.Costo</td>
                <td>
                    <a class="btn  " asp-action="Editar" id="enviar" asp-route-id="@Citas.Cita_Id">Editar</a>
                    <a class="btn  " asp-action="Diagnostico" id="enviar" asp-route-id="@Citas.Cita_Id">Diagnostico</a>
                    <a class="btn  " asp-action="Borrar" id="enviar" asp-route-id="@Citas.Cita_Id">Borrar</a>

                </td>
            </tr>
        }
    </table>


</div>
