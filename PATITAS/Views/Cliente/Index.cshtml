@model IEnumerable<PATITAS.Models.Cliente>
@{
    ViewData["Title"] = "Lista de Clientes";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<div class="row">
    <div class="col-4">
        <h3 class="text-dark">Lista de Clientes</h3>
    </div>
    <div class="col-3">
        <a asp-action="Crear" class="btn form-control" id="enviar">Crear Cliente</a>
    </div>
</div>

<div>
    @if (Model.Count() > 0)
    {
        <table class="table border">
            <tr class="text-white tabla-header">
                <th>Nombre</th>
                <th>@Html.DisplayNameFor(c => c.Telefono)</th>
                <th>@Html.DisplayNameFor(c => c.Correo)</th>
                <th>@Html.DisplayNameFor(c => c.Direccion)</th>
                <th></th>
            </tr>

            @foreach (var usuario in Model)
            {
                <tr class="tabla1">
                    <td>@usuario.NombreApellido</td>
                    <td>@usuario.Telefono</td>
                    <td>@usuario.Correo</td>
                    <td>@usuario.Direccion</td>

                    <td>
                        <a class="btn  " asp-action="Editar" id="enviar" asp-route-id="@usuario.Cliente_Id">Editar</a>
                        <a class="btn  " asp-action="Borrar" id="enviar" asp-route-id="@usuario.Cliente_Id">Borrar</a>

                    </td>
                </tr>
            }
        </table>
    }
    else
    {
        <p>No hay Clientes</p>
    }

</div>

